<project default="compile">

    <property name="junit.jar.path" location="/Users/Dean/java/junit4.12/junit-4.12.jar" />
    <property name="hamcrest.jar.path" location="/Users/Dean/java/junit4.12/hamcrest-core-1.3.jar" />

    <target name="compile">
        <javac  srcdir="."
                includeantruntime="false"
                classpath="${junit.jar.path}"
        />
    </target>

    <target name="run" depends="compile">
        <java classname="ArrayBagClient" fork="true">
        </java>
    </target>

    <target name="test" depends="compile">
        <junit>
            <classpath>
                <pathelement location="${junit.jar.path}" />
                <pathelement location="${hamcrest.jar.path}" />
            </classpath>
            <batchtest>
                <fileset dir=".">
                    <!-- <include name="**/*Test*" /> -->
                    <include name="*Test.class" />
                </fileset>
            </batchtest>
            <formatter type="brief" usefile="false" />
        </junit>
    </target>

</project>
